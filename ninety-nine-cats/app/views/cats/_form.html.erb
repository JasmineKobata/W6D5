<% if action == :edit %>
    <% action_url = cat_url(@cat)%>
<% else %>
    <% action_url = cats_url%>
<% end %>

<form action="<%= action_url %>" method="post">
    <% if action == :edit %>
        <input type="hidden" name="_method" value="patch">
    <% end %>
    <label for="name"> Name: </label>
    <input id="name" type="text" name="cat[name]" value="<%=@cat.name%>">

    <br> 
    <label for="sex"> Sex: </label>
    <label><input type="radio" name="cat[sex]" value="M" <%=cat.sex=="M" ? "checked" : ""%>/>Male</label>
    <label><input type="radio" name="cat[sex]" value="F" <%=cat.sex=="F" ? "checked" : ""%>/>Female</label>

    <br> 
    <label for="birth_date"> Birth Date: </label>
    <input id="birth_date" type="date" name="cat[birth_date]" value="<%=@cat.birth_date%>">

    <br>
    <label for="color"> Color: </label>
    <select name="cat[color]"> Color
    <option disabled selected> -- Select Color--</option>
    <option value = "white" <%=cat.color=="white" ? "selected" : ""%>>white</option>
    <option value = "black" <%=cat.color=="black" ? "selected" : ""%>>black</option>
    <option value = "yellow" <%=cat.color=="yellow" ? "selected" : ""%>>yellow</option>
    <option value = "chocolate" <%=cat.color=="chocolate" ? "selected" : ""%>>chocolate</option>
    <option value = "cinnamon" <%=cat.color=="cinnamon" ? "selected" : ""%>>cinnamon</option>
    <option value = "brown" <%=cat.color=="brown" ? "selected" : ""%>>brown</option>
    <option value = "orange" <%=cat.color=="orange" ? "selected" : ""%>>orange</option>
    </select>

    <br> 
    <label for="description">Description: </label><br>
    <textarea id="description" name="cat[description]" rows="5" cols="50">
    <%=@cat.description%>
    </textarea>
    <br>
    <input type='submit' value='<%= (action == :edit) ? "Update Cat" : "Submit Cat"%>'>
</form>